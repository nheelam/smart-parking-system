<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".smartLight.lightFragment">

        <TextView
            android:id="@+id/lightBackground"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.145" />

        <ImageView
            android:id="@+id/lightIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bulb_icon"
            app:layout_constraintBottom_toBottomOf="@+id/lightBackground"
            app:layout_constraintEnd_toEndOf="@+id/lightBackground"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/lightBackground"
            app:layout_constraintTop_toTopOf="@+id/lightBackground"
            app:layout_constraintVertical_bias="0.498" />

        <TextView
            android:id="@+id/tvParkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="64dp"
            android:text="Name:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lightBackground" />

        <TextView
            android:id="@+id/resultName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/tvParkName"
            app:layout_constraintStart_toEndOf="@+id/tvParkName"
            app:layout_constraintTop_toTopOf="@+id/tvParkName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Payment:"
            app:layout_constraintEnd_toEndOf="@+id/tvParkName"
            app:layout_constraintStart_toStartOf="@+id/tvParkName"
            app:layout_constraintTop_toBottomOf="@+id/tvParkName" />

        <TextView
            android:id="@+id/resultPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>